<fieldset>
  <%= f.select :param_type, %w{text boolean number} %>
  <%= f.text_field :name, placeholder: 'parameter name' %>
  <%= f.hidden_field :_destroy %>
  <%= f.input_field :required, :as => :boolean, 
    :inline_label => 'Required?' %>
  <%= link_to '[remove]', '#', class: 'remove_fields' %>
</fieldset>
