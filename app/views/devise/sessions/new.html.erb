<div class="container" id="login-form">
  <% content_for :title do %>Steelers- Login<% end %>
  <% content_for :description do %>Login to start or view jobs<% end %>

  <h2>Login</h2>
  <%= simple_form_for(resource, :as => resource_name, 
    :url => session_path(resource_name), 
    :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.input :user_id, :autofocus => true, label: 'User Id',
      :class => "login" %>
      <%= f.input :password, :class => "login" %>
    <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
