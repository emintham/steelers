<%= simple_form_for [@user, Userfile.new], :html => { :multiple => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.input :name %>
    <%= f.file_field :upload %>
  </div>
  <%= f.button :submit %>
<% end %>
