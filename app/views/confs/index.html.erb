<h1>Listing confs</h1>

<% if @confs.empty? %>
  No configs available
<% end %>

<% @confs.each do |conf| %>
  <%= conf.name %>
<% end %>

<%= form_tag new_conf_path, method: :get do %>
  <%= select_tag :config_template_id, 
    options_from_collection_for_select(ConfigTemplate.all, :id, :name) %>
  <%= submit_tag "New Config", name: nil %>
<% end %>
