<fieldset>
  <%= f.select :param_type, %w{text boolean number comma newline space},
    placeholder: "Parameter Type" %>
  <%= f.text_field :name, placeholder: "Parameter Name" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.hidden_field :_destroy %>
  <%= f.input_field :required, :as => :boolean, 
    :inline_label => 'Required?', 
    :input_html => { :value => true } %>
  <%= link_to 'remove', '#', class: 'remove_fields btn btn-mini' %>
</fieldset>
