<!-- Config table -->
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Program</th>
      <th>Created at</th>
      <th>Template</th>
      <th>Author</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @confs.each do |conf| %>
      <tr>
        <td><%= conf.name %></td>
        <td><%= conf.config_template.program.name %></td>
        <td><%= conf.created_at.to_date %></td>
        <td><%= conf.config_template.name %></td>
        <td>Placeholder</td>
        <td><%= link_to 'Show', conf,
          class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_conf_path(conf),
          class: 'btn btn-mini' %></td>
        <td><%= link_to 'Delete', conf, 
          method: :delete, data: { confirm: 'Are you sure?' },
          class: 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
